			<id>dfki-snapshots</id>
			<url>http://www.dfki.uni-kl.de/artifactory/libs-snapshots/</url>
			<snapshots>
				<enabled>true</enabled>
			</snapshots>
		</repository>
		<repository>
			<id>jfresnel-repository</id>
