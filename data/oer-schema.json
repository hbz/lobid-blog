{
   "$schema":"http://json-schema.org/draft-04/schema#",
   "title":"Share an OER",
   "description":"Simple editor for sharing an openly licensed educational resource",
   "type":"object",
   "properties":{
      "@context":{
         "type":"string",
         "format":"uri",
         "enum":[
            "http://schema.org/"
         ],
         "_display":{
            "className":"hidden"
         }
      },
      "id":{
         "title":"URL",
         "type":"string",
         "format":"uri"
      },
      "type":{
         "title":"Type",
         "type":"string",
         "default": "CreativeWork",
         "enum":[
            "CreativeWork"
         ]
      },
      "name":{
         "title":"Title",
         "type":"string"
      },
      "creator":{
         "title":"Creator",
         "type":"array",
         "items":{
            "type":"object",
            "properties":{
               "type":{
                  "title":"Type",
                  "type":"string",
                  "default": "Person",
                  "enum":[
                     "Person",
                     "Organization"
                  ]
               },
               "id":{
                  "title":"URL",
                  "type":"string",
                  "format":"uri"
               },
               "name":{
                  "title":"Name",
                  "type":"string"
               }
            },
            "required":[
               "name",
               "id",
               "type"
            ]
         }
      },
      "license":{
        "title":"License",
        "type":"string",
        "format": "uri",
        "enum": [
          "https://creativecommons.org/publicdomain/zero/1.0/",
          "https://creativecommons.org/licenses/by/4.0/",
          "https://creativecommons.org/licenses/by-sa/4.0/"
        ]
      },
      "about":{
         "title":"Subject",
         "type":"object",
         "properties":{
            "type":{
               "type":"string",
               "enum":[
                  "Concept"
               ]
            },
            "id":{
               "type":"string",
               "format":"uri"
            },
            "inScheme":{
               "type":"object",
               "properties":{
                  "id":{
                     "type":"string",
                     "enum":[
                        "https://w3id.org/class/esc/scheme"
                     ]
                  }
               }
            }
         },
         "_widget":"SkohubLookup"
      }
   }
}
